<Page x:Class="CommonWallet.Pages.Homepage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CommonWallet"
      xmlns:userControls="clr-namespace:CommonWallet.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="570" d:DesignWidth="800"
      Title="Homepage"
      Background="White">

    <Grid x:Name="Grid">
        <userControls:WalletPanel x:Name="WalletPanel" Margin="0,58,0,44" BorderThickness="1" />
        <Grid x:Name="AccountGrid" VerticalAlignment="Top" HorizontalAlignment="Right" Height="80" Width="80" Background="#FFF9F9F9" MouseEnter="AccountGrid_OnMouseEnter" MouseLeave="AccountGrid_OnMouseLeave">
            <Ellipse HorizontalAlignment="Right" Height="60" Margin="0,10,10,0" VerticalAlignment="Top" Width="60" >
                <Ellipse.Fill>
                    <ImageBrush ImageSource="/CommonWallet;component/Resources/user.png"/>
                </Ellipse.Fill>
            </Ellipse>
            <Label Content="ericchen1248" HorizontalAlignment="Right" VerticalContentAlignment="Bottom" Margin="0,22,75,0" VerticalAlignment="Top" Width="185" Height="48" FontFamily="Bookman Old Style" FontSize="20" FontWeight="Bold" Foreground="#FF7A7979"/>
        </Grid>
    </Grid>
</Page>
